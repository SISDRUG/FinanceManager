<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceManager.ReportsPage"
             Title="ReportsPage">
   <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center">

                <Label Margin="20"
                       HorizontalOptions="Center"
                       Text="Total for all accounts:"/>

                <Label Margin="20"
                       HorizontalOptions="Center"
                       x:Name="totalLabel"/>

            </HorizontalStackLayout>

            <Label Margin="20"
                   HorizontalOptions="Center"
                   Text="Operations"/>
            <VerticalStackLayout x:Name="operationsStack"/>
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
